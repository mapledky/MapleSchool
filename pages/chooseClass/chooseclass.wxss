.main{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.search_pane{
  width: 88%;
  margin-left: 6%;
  margin-top: 3%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.search{
  height:80rpx;
  width: 70%;
  background-color: #f2f2f2;
  font-size: 12px;
  padding-left: 10px;
  color:#000;
  border-radius: 50rpx;
}
.search_button{
  height: 80rpx;
  width: 16%;
  margin-left: 2%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  background-color: rgba(159, 230, 252, 0.822);
  font-size: 12px;
  border-radius: 30rpx;
}

.navbar{
  flex:none;
  display: flex;
  background: #fff;
}

.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  color: #888888;
}
.navbar .item.active{
  color: #B1DCFF;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 4rpx;
  background: #B1DCFF;
}

.placeholder {
  color: #888888;
  caret-color: #B1DCFF;
}
.coursepane{
  margin-left: 6%;
  margin-top: 5%;
  width: 88%; 
  background-color:#f2f2f2 ;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
}
.image{
  margin: 5px;
  width:80px ;
  height:80px ;
  border-radius: 20px;
}
.maxstudent{
  margin: 5px;
  width: 50px;
  height: 20px;
}
.coursedetail{
  margin-left: 10px;
  margin-top: 5px;
  margin-bottom: 5px;
  margin-right: 10px;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}

