/* pages/courseDetail/courseDetail.wxss */
.coursepane{
  margin-left: 6%;
  margin-top: 5%;
  width: 88%; 
  background-color:#e4f77a;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
}
.image{
  margin: 5px;
  width:100px ;
  height:100px ;
  border-radius: 20px;
}
.coursedetail{
  margin-left: 10px;
  margin-top: 5px;
  margin-bottom: 5px;
  margin-right: 10px;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}

.descriptionPane{
  margin-left: 6%;
  width: 88%;
  margin-top: 5%;
}
.textback{
  padding:10px;
  background-color: rgb(238, 238, 238);
  border-radius: 15px;
  display: flex;
  flex-direction: column;
  align-items:center ;
  justify-content: space-around;
  word-break: break-all;
}

.textpane{
  margin-top: 5%;
  margin-left: 6%;
  width: 88%;
}
.imageicon{
  width: 25px;
  height: 25px;
  padding: 2%;
}

.studentpane{
  margin-top: 5%;
  margin-bottom: 15%;
  margin-left: 6%;
  background-color: rgb(238, 238, 238);
  border-radius: 15px;
  width: 88%;
}
.studentpane_list{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.studenttext{
  padding: 2%;
}

.description{
  padding: 2%; 
  background-color: rgb(238, 238, 238);
  border-radius: 15px;
  display: flex;
  flex-direction: row;
  align-items:center ;
  word-break: break-all;
}
.register{
  position: fixed;
  bottom: 2%;
  margin-left: 6%;
  width: 88%;
  background-color: rgba(117, 222, 253, 0.822);
  border-radius: 20px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center ;
}
.registertext{
  margin: 3%; 
  color: white;
}


.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
}


.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 70%;
  margin-left: 15%;
  margin-top: 40%;
}

.toast-title {
  padding-left: 5%;
  background-color: #2196f3;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 25rpx;
  border-top-left-radius: 25rpx;
}

.toast-main {
  padding-top: 2vh;
  padding-bottom: 2vh;
  background-color: white;
  text-align: center;
}

.toast-input {
  margin-left: 5%;
  margin-right: 5%;
  border: 1px solid #ddd;
  padding-left: 2vh;
  padding-right: 2vh;
  padding-top: 1vh;
  border-radius: 10px;
  padding-bottom: 1vh;
}

.toast-button {
  display: flex;
}

.button1 {

  background-color: white;
  color: red;
  border-radius: 0px;
  border-bottom-left-radius: 25rpx;
}

.button2{
  background-color: white;
  color: black;
  border-radius: 0px;
  border-bottom-right-radius: 25rpx;
}

.lunbo{
  margin-left: 6%;
  height: 150px;
  margin-top: 5%;
  margin-bottom: 5%;
  width: 88%;
}
.topimage{
  height: 150px;
  width: 100%;
}

